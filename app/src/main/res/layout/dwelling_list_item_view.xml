<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    tools:context=".fragment.DwellingsListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dwelling_list_item_prefix"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:background="@color/light_purple"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="A0101" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_toRightOf="@+id/dwelling_list_item_prefix"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/dwelling_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4A4A4A"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Owner Name" />

            <TextView
                android:id="@+id/dwelling_list_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                tools:text="Dwelling Type" />

            <TextView
                android:id="@+id/dwelling_list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                tools:text="28/05/2018" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>