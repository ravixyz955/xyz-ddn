<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    tools:context=".fragment.RegionsListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="128dp">

            <ImageView
                android:id="@+id/region_list_item_image"
                android:layout_width="match_parent"
                android:src="@drawable/bg_splash"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/region_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="12dp"
                android:text="Lancho Hills"
                android:textColor="#4A4A4A"
                android:textSize="16sp"
                android:textStyle="bold" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/region_list_item_ddn_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Digital Door Numbers"
                android:textColor="#C2C3C5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/region_list_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="12/12/2017"
                android:textColor="#C2C3C5"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>